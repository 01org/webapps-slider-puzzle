  "amd": {
    "baseUrl": "./app/js",
    "mainConfigFile": "./app/js/amd-config.js",
    "include": [
      "main",
      "pages/*"
    ]
  },

  "html": [
    { "cwd": "app", "src": ["*.html"] },
    { "cwd": "app", "src": ["templates/**/*.html"] }
  ],

  "templates": [
    { "cwd": "app", "src": ["templates/**/*.dust"] }
  ],

  "css": [
    { "cwd": "app", "src": ["css/**"] }
  ],

  "js": [
    { "cwd": "app", "src": ["js/**"] }
  ],

  "images": [
    { "cwd": "app", "src": ["images/**"] }
  ],

  "common": [
    { "cwd": ".", "src": ["LICENCE"] },
    { "cwd": "app", "src": ["audio/**"] },
    { "cwd": "app", "src": ["fonts/**"] },
    { "cwd": "app", "src": ["data/**"] },
    { "cwd": "app", "src": ["nls/**"] },
    { "cwd": "app", "src": ["lib/graduate/index.woff"] }
  ],

